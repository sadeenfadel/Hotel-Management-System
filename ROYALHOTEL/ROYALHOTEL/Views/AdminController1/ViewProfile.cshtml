@model ROYALHOTEL.Models.User

@{
    ViewData["Title"] = "View Profile";
    Layout = "~/Views/Shared/_AdminLayout1.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>User Profile</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Userfname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Userfname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Userlname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Userlname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imagepath)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Imagepath != null)
            {
                <img src="~/Images/@Model.Imagepath" alt="Profile Image" style="width:150px;height:150px;" />
            }
            else
            {
                <p>No profile image available.</p>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="EditProfile" asp-route-id="@Model.Userid">Edit Profile</a> |
    <a asp-action="ViewProfile">Back to List</a>
</div>
