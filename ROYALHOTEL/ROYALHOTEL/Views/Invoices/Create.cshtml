@model ROYALHOTEL.Models.Invoice

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>Create</h1>

<h4>Invoice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Hidden fields for ID properties -->
            @Html.HiddenFor(model => model.Reservationid)
            @Html.HiddenFor(model => model.Userid)

            <!-- Invoice Content Input -->
            <div class="form-group">
                <label asp-for="Invoicecontent" class="control-label"></label>
                <textarea asp-for="Invoicecontent" class="form-control"></textarea>
                <span asp-validation-for="Invoicecontent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


