@model IEnumerable<Hotel>

@{
    Layout="~/Views/Shared/_HomeLayout.cshtml";
}
<!--================Banner Area =================-->
<section class="banner_area">
    <div class="booking_table d_flex align-items-center">
        <div class="overlay bg-parallax" data-stellar-ratio="0.9" data-stellar-vertical-offset="0" data-background=""></div>
        <div class="container">
            <div class="banner_content text-center">
                <h6>Away from monotonous life</h6>
                <h2>Relax Your Mind</h2>
                <p>If you are looking at blank cassettes on the web, you may be very confused at the<br> difference in price. You may see some for as low as $.17 each.</p>
                <a asp-controller="LoginandRegister" asp-action="Register" class="btn theme_btn button_hover">Get Started</a>
            </div>
        </div>
    </div>

</section>
<!--================Banner Area =================-->
<!--================ Accomodation Area  =================-->
<section class="accomodation_area section_gap">
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_color">Hotels</h2>
            <p>We all live in an age that belongs to the young at heart. Life that is becoming extremely fast, </p>
        </div>
        <div class="row mb_30">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-sm-6">
                    <div class="accomodation_item text-center">
                        <div class="hotel_img">
                            <img src=@Url.Content("~/Images/"+item.Imagepath) asp-append-version="true" style="border-radius:20%;" width="200" height="200">
                            <a asp-controller="Home" asp-action="GetHotelByRoomId" asp-route-id="@item.Hotelid" class="btn theme_btn button_hover">View Details</a>
                        </div>
                        <a href="#"><h4 class="sec_h4">@item.Hotelname</h4></a>
                        <h5>@item.Location</h5>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
<!--================ Accomodation Area  =================-->
<!--================ Facilities Area  =================-->
<section class="facilities_area section_gap">
    <div class="overlay bg-parallax" data-stellar-ratio="0.8" data-stellar-vertical-offset="0" data-background="">
    </div>
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_w">RoyalHotel Features</h2>
            <p>Who are in extremely love with eco friendly system.</p>
        </div>
        <div class="row mb_30">
            @foreach (var item in (IEnumerable<Feature>)ViewData["features"]){
            <div class="col-lg-4 col-md-6">
                <div class="facilities_item">
                    <h4 class="sec_h4">@item.Featuretext</h4>
                        <p>Usage of the Internet is becoming more common due to rapid advancement of technology and power.</p>
                </div>
            </div>
            }
         
        </div>
    </div>
</section>
<!--================ Facilities Area  =================-->
<!--================ About History Area  =================-->
<section class="about_history_area section_gap">
    <div class="container">
        <div class="row">
            @foreach (var item in (IEnumerable<Aboutu>)ViewData["about"])
            {
                <div class="col-md-6 d_flex align-items-center">
                    <div class="about_content ">
                        <h2 class="title title_color">About Us <br>Our History<br>Mission & Vision</h2>

                        <p>@item.Content</p>

                    </div>
                </div>
                <div class="col-md-6">
                    <img class="img-fluid" src=@Url.Content("~/Images/"+item.Imagepath) asp-append-version="true" height="400" width="400">
                </div>
            }
        </div>
    </div>
</section>
<!--================ About History Area  =================-->
<!--================ Testimonial Area  =================-->
<section class="testimonial_area section_gap">
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_color">Testimonial from our Clients</h2>
            <p>The French Revolution constituted for the conscience of the dominant aristocratic class a fall from </p>
        </div>
        <div class="testimonial_slider owl-carousel">
            @foreach (var testimonial in ViewBag.ApprovedTestimonials)
            {
            <div class="media testimonial_item">
                    <img class="rounded-circle" src=@Url.Content("~/Images/"+@testimonial.Imagepath) alt="">
                <div class="media-body">
                        <h4 class="sec_h4">
                            @testimonial.User.Userfname
                        </h4>
                        <p>@testimonial.Testimonialtext</p>
                        <h5 class="sec_h4">@testimonial.Hotel.Hotelname</h5>
                    <div class="star">
                        <a href="#"><i class="fa fa-star"></i></a>
                        <a href="#"><i class="fa fa-star"></i></a>
                        <a href="#"><i class="fa fa-star"></i></a>
                        <a href="#"><i class="fa fa-star"></i></a>
                        <a href="#"><i class="fa fa-star-half-o"></i></a>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
</section>

    
        
     


<!--================ Testimonial Area  =================-->
<!--================ Latest Blog Area  =================-->
<section class="latest_blog_area section_gap">
    <div class="container">
        <div class="section_title text-center">
            <h2 class="title_color">latest posts from blog</h2>
            <p>The French Revolution constituted for the conscience of the dominant aristocratic class a fall from </p>
        </div>
        <div class="row mb_30">
            @foreach (var item in (IEnumerable<Blogging>)ViewData["blog"])
            {
            
            <div class="col-lg-4 col-md-6">
                <div class="single-recent-blog-post">
                    <div class="thumb">
                        <img class="img-fluid" src=@Url.Content("~/Images/"+item.Imageurl) width="200" height="200"     alt="post">
                    </div>
                    <div class="details">
                       
                        <a href="#"><h4 class="sec_h4">@item.Heading</h4></a>
                        <p>@item.Content</p>
                        <h6 class="date title_color">@item.Datecreated</h6>
                    </div>
                </div>
            </div>
            }
            
        </div>
    </div>
</section>

<!--================ Recent Area  =================-->