@model ROYALHOTEL.Models.User

@{
    ViewData["Title"] = "View Profile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h4>@ViewBag.Name @ViewBag.LName Profile</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Userfname)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Userfname)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Userlname)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Userlname)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Imagepath)
                </dt>
                <dd class="col-sm-10">
                    @if (Model.Imagepath != null)
                    {
                        <img src="~/Images/@Model.Imagepath" alt="Profile Image" style="width:150px;height:150px;border-radius:50%;" />
                    }
                    else
                    {
                        <p>No profile image available.</p>
                    }
                </dd>
            </dl>
            <div>
                <a asp-action="ProfileEdit" asp-route-id="@Model.Userid" class="btn btn-primary">Edit Profile</a> |
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>
